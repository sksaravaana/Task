            margin: 0 15px;
        }

        .nav ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2em;
            transition: color 0.3s ease;
        }

        .nav ul li a:hover {
            color: #ff6347;
        }

        /* Main content layout using CSS Grid */
        .main-content {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            padding: 20px;
        }

        .section {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
